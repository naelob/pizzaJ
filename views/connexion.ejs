<!DOCTYPE html>
<html lang="en">

    <%- include('partials/layouts/header.ejs') %>
    <%- include('partials/layouts/navbar.ejs') %>

<body>

    <div class="main-box">
        <div class="container">
            <section id="main-connexion" style="position: relative;">
                <form action="/register" method="post">
                    <div class="flex-outer">
                        <h3>Inscription</h3>

                        <label for="name">Name:</label>
                        <input type="text" id="name" name="name"><br>
                        <label for="email">Email:</label>
                        <input type="text" id="email" name="email"><br>
                        <label for="phonenumber">Phone:</label>
                        <input type="text" id="phone" name="phonenumber"><br>
                        <label for="password">Password:</label>
                        <input type="password" id="pwd" name="password"><br>
                        <select id="roleSelect" name="role_select">
                            <option value="valeur1">Client</option>
                            <option value="valeur2" selected>Livreur</option>
                          </select>
                        <button type="submit">S'inscrire</button>
                    </div>
                </form>
                <form action="/login" method="post">
                    <div class="flex-outer">
                        <h3>Connexion</h3>

                        <label for="email">Email:</label>
                        <input type="text" id="email" name="email"><br>
                        <label for="password">Password:</label>
                        <input type="password" id="pwd" name="password"><br>
                        <button type="submit">Se Connecter</button>
                    </div>
                </form>
                <img src="./public/img/images/tom-pizza-meue-on-table.svg" width="350px">
            </section>
        </div>
    </div>
    <%- include('partials/layouts/footer.ejs') %>
</body>
</html>
