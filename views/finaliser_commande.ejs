          <label for="heure"> Heure Livraison Souhaitee: </label>
          <input type="text" class="form-control" id="heure" name="heure" placeholder="Heure">
        </div>
        <!-- input non visible pr avoir la valuer de l'id -->
        <input type="hidden"  id="idCommandeInput" name="idOrder" value="<%= id %>">
        
