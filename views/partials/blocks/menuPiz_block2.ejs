            <img class="item_img" src="<%= pizzas[i].img %>" >
        </div>
        <div class="info col-sm-9">
            <div class="item_head">
                <h3 class="item_title"> <%= pizzas[i].title %></h3>
                <span class="item_dots"> </span>
                <span class="item_price"> <%= pizzas[i].price %>â‚¬</span>
            </div>
            <p class="item_description"> <%= pizzas[i].info %> </p>
